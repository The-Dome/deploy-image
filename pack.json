{
    "variables": {
        "docker_repo": "{{ env `docker_repo` }}"
    },
    "builders": [{
        "type": "docker",
        "image": "debian:stretch-slim",
        "commit": true,
        "changes": [
            "USER deploy",
            "WORKDIR /home/deploy",
            "ENTRYPOINT [\"/bin/sh\", \"-c\"]",
            "CMD [\"packer build pack.json\"]"
        ]
    }],

    "provisioners": [{
        "type": "ansible",
        "user": "root",
        "playbook_file": "provision.yml"
    }],

    "post-processors": [[ {
        "type": "docker-tag",
        "repository": "{{ user `docker_repo` | lower }}/deploy",
        "tag": "latest"
    } ]]
}
